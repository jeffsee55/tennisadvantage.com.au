.container.clear-nav
  .header
    %h1 SLIDESHOW IMAGES
    .new-slide-image
      =simple_form_for [:admin, @slide_image], class: "right", html: { url: admin_slide_images_path } do |f|
        =f.attachment_field :image
        =f.submit
    %hr.thick
  %ul.admin-slide-images
    -@slide_images.each do |slide_image|
      %li.slide-image{style: "background: url( #{ attachment_url slide_image, :image, :fill, 500, 300 } ), no-repeat center; background-size: cover"}
        =link_to  admin_slide_image_path(slide_image), class: "slide-image-delete",  method: :delete, data: { confirm: "Are you sure?" } do
          %i.fa.fa-2x.fa-trash

